                                            <span class="input-group-text">Rp.</span>
                                        </div>
                                        <InputText id="rcp_doc" @bind-Value="fundReturnHeader.TransactionAmount" class="form-control" readonly="@(isLoading || successUpload)"></InputText>
                                        <div class="input-group-append">
                                            <span class="input-group-text">,-</span>
                                        </div>
                                    </div>
                                </div>
