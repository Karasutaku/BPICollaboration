                                <div class="col">
                                    <label for="discussionUploadFile" class="btn btn-primary-cus"><i class="oi oi-paperclip"></i> Attach</label>
                                    <InputFile id="discussionUploadFile" accept=".pdf" multiple hidden OnChange="UploadHandleSelection" disabled="@(isLoading || successUpload)"></InputFile>
                                </div>
                            </div>

