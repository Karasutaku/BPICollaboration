                                        <div class="input-group-append">
                                            <span class="input-group-text">,-</span>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="row my-2">
                                <div class="col">
                                    <label for="cust_name">Customer Name :</label>
                                    <InputText id="cust_name" @bind-Value="fundReturnHeader.CustomerName" class="form-control" readonly="@(isLoading || successUpload)"></InputText>
                                </div>
                                <div class="col">
                                    <label for="cust_contc">Contact No :</label>
                                    <InputText id="cust_contc" @bind-Value="fundReturnHeader.CustomerContactNo" class="form-control" readonly="@(isLoading || successUpload)"></InputText>
                                </div>
                            </div>

                            <div class="row my-2">
                                <div class="col">
                                    <label for="cust_type">Customer Type :</label>
                                    <InputSelect id="cust_type" @bind-Value="fundReturnHeader.CustomerType" class="form-select" disabled="@(isLoading || successUpload)">
                                        <option hidden value="BLANK">Select Customer Type</option>
                                        <option value="MEMBER">Member</option>
                                        <option value="NONMEMBER">Non-Member</option>
                                    </InputSelect>
                                </div>
                                <div class="col">
                                    @if (fundReturnHeader.CustomerType.Equals("MEMBER"))
                                    {
                                        <label for="memb_id">Customer Member ID :</label>
                                        <InputText id="memb_id" @bind-Value="fundReturnHeader.CustomerMemberID" class="form-control" readonly="@(isLoading || successUpload)"></InputText>
                                    }
                                </div>
                            </div>

                            <div class="row my-2">
                                <div class="col">
                                    <label for="bank_holder">Bank Holder Name :</label>
                                    <InputText id="bank_holder" @bind-Value="fundReturnHeader.BankHolderName" class="form-control" readonly="@(isLoading || successUpload)"></InputText>
                                </div>
                            </div>

                            <div class="row my-2">
                                <div class="col">
                                    <label for="bank_account">Bank Account :</label>
                                    <InputText id="bank_account" @bind-Value="fundReturnHeader.BankAccount" class="form-control" readonly="@(isLoading || successUpload)"></InputText>
                                </div>
                                <div class="col">
                                    <label for="banks">Bank :</label>
                                    <InputSelect id="banks" @bind-Value="fundReturnHeader.BankID" class="form-select" disabled="@(isLoading || successUpload)">
                                        @if (checkBank())
                                        {
                                            @foreach (var bank in FundReturnService.banks)
                                            {
                                                <option value="@bank.BankID">@bank.BankShortName</option>
                                            }
                                        }
                                        else
                                        {
                                            <option disabled value="BLANK">Bank Data Empty</option>
                                        }
                                    </InputSelect>
                                </div>
                            </div>

                            <div class="row my-2">
                                <div class="col">
                                    <label for="reason">Reason / Cronology :</label>
                                    <InputTextArea id="reason" @bind-Value="fundReturnHeader.Reason" class="form-control" readonly="@(isLoading || successUpload)"></InputTextArea>
                                </div>
                            </div>

                            <div class="row my-2">
                                <div class="col">
                                    <label for="discussionUploadFile" class="btn btn-primary-cus"><i class="oi oi-paperclip"></i> Attach</label>
                                    <InputFile id="discussionUploadFile" accept=".pdf" multiple hidden OnChange="UploadHandleSelection" disabled="@(isLoading || successUpload)"></InputFile>
                                </div>
                            </div>

                            @if (checkFileUpload())
                            {
                                <div class="row my-2">
                                    <div class="col">
                                        <ul class="list-group mb-3">
                                            @foreach (var attachedFile in fileUpload)
                                            {
                                                <li class="list-group-item">@attachedFile.fileName.Split("!_!")[1]</li>
                                            }
                                        </ul>
                                    </div>
                                </div>
                            }
                            else
                            {
                                <div class="alert alert-warning" role="alert">
                                    <b>No Attachment !</b>
                                </div>
                            }
                        }
                        else if (fundReturnCategorySelected.Equals("XNTF"))
                        {
                            <div class="row my-2">
                                <div class="col">
                                    <label for="doc_id">Document ID :</label>
                                    <InputText id="doc_id" @bind-Value="fundReturnHeader.DocumentID" class="form-control" readonly></InputText>
                                </div>
                                <div class="col">
                                    <label for="req_date">Request Date :</label>
                                    <InputDate id="req_date" @bind-Value="fundReturnHeader.RequestDate" class="form-control" readonly></InputDate>
                                </div>
                            </div>

                            <div class="row my-2">
                                <div class="col">
                                    <label for="loc">Location :</label>
                                    <InputText id="loc" @bind-Value="fundReturnHeader.LocationID" class="form-control" readonly></InputText>
                                </div>
                                <div class="col">
                                    <label for="com_type">Commercial Type :</label>
                                    <InputSelect id="com_type" @bind-Value="fundReturnHeader.CommercialType" class="form-select" disabled="@(isLoading || successUpload)">
                                        <option hidden value="BLANK">Select Commercial Type</option>
                                        <option value="ONLINE">Online</option>
                                        <option value="OFFLINE">Offline</option>
                                    </InputSelect>
                                </div>
                            </div>

                            @if (fundReturnHeader.CommercialType.Equals("BLANK"))
                            {
                                <div class="alert alert-info alert-dismissible fade show my-3" role="alert">
                                    <strong>Select Commercial Type Above !</strong>
                                </div>
                            }
                            else
                            {
                                <div class="row my-2">
                                    <div class="col">
                                        <label for="rcp_doc">
                                            @(fundReturnHeader.CommercialType.Equals("ONLINE") ? "SO :" : "Receipt :")
                                        </label>
                                        @if (fundReturnHeader.CommercialType.Equals("ONLINE"))
                                        {
                                            <InputText id="rcp_doc" @bind-Value="fundReturnHeader.ReceiptDocument" class="form-control" readonly="@(isLoading || successUpload)"></InputText>
                                        }
                                        else
                                        {
                                            <div id="rcp_doc" class="input-group">
                                                <InputText id="rcp_doc" @bind-Value="fundReturnHeader.ReceiptDocument" class="form-control" readonly="@(isLoading || successUpload)"></InputText>
                                                <button type="button" class="btn btn-sm btn-primary-cus" data-toggle="modal" data-target="#selectitembyReceiptModal" @onclick="selectItembyReceiptNo" disabled="@(isLoading || successUpload)">...</button>
                                            </div>
                                        }
                                    </div>
                                </div>

                                @if (fundReturnHeader.CommercialType.Equals("ONLINE"))
                                {
                                    <div class="row my-2">
                                        <div class="col">
                                            <label for="rcp_doc">External Document :</label>
                                            <InputText id="rcp_doc" @bind-Value="fundReturnHeader.ExternalDocument" class="form-control" readonly="@(isLoading || successUpload)"></InputText>
                                        </div>
                                    </div>
                                }
                            }

                            <div class="row my-2">
                                <div class="col">
                                    <label for="rcp_doc">Refund Amount :</label>
                                    <div class="input-group mb-3">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text">Rp.</span>
                                        </div>
                                        @{
                                            var sums = decimal.Zero;
                                            if (fundReturnLine.Count > 0)
                                            {
                                                fundReturnLine.ForEach(x =>
                                                {
                                                    sums += (x.ItemQuantity * x.ItemAmount);
                                                });
                                            }
                                            var prevSum = sums.ToString("N0");
                                        }
                                        <InputText id="rcp_doc" @bind-Value="prevSum" class="form-control" readonly></InputText>
                                        <div class="input-group-append">
                                            <span class="input-group-text">,-</span>
                                        </div>
                                    </div>
                                </div>
