                                {
                                    <option hidden value="BLANK">Choose Refund Category</option>
                                    @foreach (var cat in FundReturnService.fundReturnCategories)
                                    {
                                        <option value="@cat.FundReturnCategoryID">@cat.FundReturnCategoryDescription</option>
                                    }
                                }
                                else
                                {
                                    <option disabled hidden value="BLANK">Data Empty</option>
                                }
                            </select>
                        </div>
                    </div>

                    <EditForm Model="@fundReturnHeader">
                        <DataAnnotationsValidator />

                        @if (fundReturnCategorySelected.Equals("XRKN"))
                        {
                            <div class="row my-2">
                                <div class="col">
                                    <label for="doc_id">Document ID :</label>
                                    <InputText id="doc_id" @bind-Value="fundReturnHeader.DocumentID" class="form-control" readonly></InputText>
                                </div>
                                <div class="col">
                                    <label for="req_date">Request Date :</label>
                                    <InputDate id="req_date" @bind-Value="fundReturnHeader.RequestDate" class="form-control" readonly></InputDate>
                                </div>
                            </div>

                            <div class="row my-2">
                                <div class="col">
                                    <label for="loc">Location :</label>
                                    <InputText id="loc" @bind-Value="fundReturnHeader.LocationID" class="form-control" readonly></InputText>
                                </div>
                            </div>

                            <div class="row my-2">
                                <div class="col">
                                    <label for="cust_name">Customer Name :</label>
                                    <InputText id="cust_name" @bind-Value="fundReturnHeader.CustomerName" class="form-control" readonly="@(isLoading || successUpload)"></InputText>
                                </div>
                                <div class="col">
                                    <label for="cust_contc">Contact No :</label>
                                    <InputText id="cust_contc" @bind-Value="fundReturnHeader.CustomerContactNo" class="form-control" readonly="@(isLoading || successUpload)"></InputText>
                                </div>
                            </div>

                            <div class="row my-2">
                                <div class="col">
                                    <label for="rcp_doc">Refund Amount :</label>
                                    <div class="input-group mb-3">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text">Rp.</span>
                                        </div>
                                        <InputText id="rcp_doc" @bind-Value="fundReturnHeader.RefundAmount" class="form-control" readonly="@(isLoading || successUpload)"></InputText>
                                        <div class="input-group-append">
                                            <span class="input-group-text">,-</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col">
                                    <label for="rcp_doc">Transaction Amount :</label>
                                    <div class="input-group mb-3">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text">Rp.</span>
                                        </div>
                                        <InputText id="rcp_doc" @bind-Value="fundReturnHeader.TransactionAmount" class="form-control" readonly="@(isLoading || successUpload)"></InputText>
                                        <div class="input-group-append">
                                            <span class="input-group-text">,-</span>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="row my-2">
                                <div class="col">
                                    <label for="bank_holder">Bank Holder Name :</label>
                                    <InputText id="bank_holder" @bind-Value="fundReturnHeader.BankHolderName" class="form-control" readonly="@(isLoading || successUpload)"></InputText>
                                </div>
                            </div>

                            <div class="row my-2">
                                <div class="col">
                                    <label for="bank_account">Bank Account :</label>
                                    <InputText id="bank_account" @bind-Value="fundReturnHeader.BankAccount" class="form-control" readonly="@(isLoading || successUpload)"></InputText>
                                </div>
                                <div class="col">
                                    <label for="banks">Bank :</label>
                                    <InputSelect id="banks" @bind-Value="fundReturnHeader.BankID" class="form-select" disabled="@(isLoading || successUpload)">
                                        @if (checkBank())
                                        {
                                            @foreach (var bank in FundReturnService.banks)
                                            {
                                                <option value="@bank.BankID">@bank.BankShortName</option>
                                            }
                                        }
                                        else
                                        {
                                            <option disabled value="BLANK">Bank Data Empty</option>
                                        }
                                    </InputSelect>
                                </div>
                            </div>

                            <div class="row my-2">
                                <div class="col">
                                    <label for="reason">Reason / Cronology :</label>
                                    <InputTextArea id="reason" @bind-Value="fundReturnHeader.Reason" class="form-control" readonly="@(isLoading || successUpload)"></InputTextArea>
                                </div>
                            </div>

