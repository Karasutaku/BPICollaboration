                                            <th class="text-center align-middle text-wrap" style="width: 30%; font-size: 15px;">Item Description</th>
                                            <th class="text-center align-middle text-wrap" style="width: 10%; font-size: 15px;">Item Qty</th>
                                            <th class="text-center align-middle text-wrap" style="width: 10%; font-size: 15px;">UOM</th>
                                            <th class="text-center align-middle text-wrap" style="width: 18%; font-size: 15px;">Item Amount</th>
                                            <th class="text-center align-middle text-wrap" style="width: 10%; font-size: 15px;">Discount</th>
                                        </tr>
                                    </thead>
