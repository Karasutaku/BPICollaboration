                            {
                                <div class="row my-2">
                                    <div class="col">
                                        <ul class="list-group mb-3">
                                            @foreach (var attachedFile in fileUpload)
                                            {
                                                <li class="list-group-item">@attachedFile.fileName.Split("!_!")[1]</li>
                                            }
                                        </ul>
                                    </div>
                                </div>
                            }
