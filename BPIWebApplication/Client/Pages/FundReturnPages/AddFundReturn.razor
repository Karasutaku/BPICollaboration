                                </div>
                            </div>

                            <div class="row my-2">
                                <div class="col">
                                    <label for="cust_type">Customer Type :</label>
                                    <InputSelect id="cust_type" @bind-Value="fundReturnHeader.CustomerType" class="form-select" disabled="@(isLoading || successUpload)">
                                        <option hidden value="BLANK">Select Customer Type</option>
                                        <option value="MEMBER">Member</option>
                                        <option value="NONMEMBER">Non-Member</option>
                                    </InputSelect>
                                </div>
                                <div class="col">
                                    @if (fundReturnHeader.CustomerType.Equals("MEMBER"))
                                    {
